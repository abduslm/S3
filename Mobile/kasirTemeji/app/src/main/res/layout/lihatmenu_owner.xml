<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <!-- ================= HEADER ================= -->


    <!-- ================= SIDEBAR ================= -->



    <!-- ================= MAIN CONTENT ================= -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_table_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TableLayout
                    android:id="@+id/tabelmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:stretchColumns="0">

                    <!-- Header -->
                    <TableRow android:background="#243447">
                        <TextView android:text="Nama Menu" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="Kategori" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="Status" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="ID Menu" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="Stok" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="Harga" android:textColor="#fff" android:padding="12dp"/>
                    </TableRow>


                </TableLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Empty State (jika tidak ada data) -->
    <TextView
        android:id="@+id/empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum ada data menu"
        android:textSize="18sp"
        android:textColor="#616161"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- BUTTON KEMBALI -->

</androidx.constraintlayout.widget.ConstraintLayout>
