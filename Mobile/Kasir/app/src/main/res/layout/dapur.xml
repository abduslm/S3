<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".YourActivity">

    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="32dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo_kedai_temeji"
                android:layout_width="48dp"
                android:layout_height="58dp"
                android:contentDescription="Logo Kedai Temeji"
                android:scaleType="fitCenter"
                android:src="@drawable/logokedaitemeji" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/oneway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri_regular"
                    android:gravity="start"
                    android:text="Kedai Temeji"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/jum_at_19_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Jumâ€™at 19-September-2025 / Mahesa"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/search_card"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="260dp"  app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/cari"
                android:drawablePadding="8dp"
                android:hint="Search"
                android:inputType="text"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ordermenu4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="8dp"
                android:layout_marginStart="120dp" android:scaleType="fitCenter"
                android:src="@drawable/ordermenu"
                android:contentDescription="Order Menu Icon"
                android:background="@drawable/ordermenu2"/>

            <TextView
                android:id="@+id/ordermenu5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/manrope_bold"
                android:text="Pesanan 1"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/header_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_bar" />

    <LinearLayout
        android:id="@+id/pesanan"
        android:layout_width="800dp"
        android:layout_height="550dp"
        android:background="#FFFFFF"
        android:layout_marginStart="55dp"
        android:orientation="vertical"
        android:layout_marginTop="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_separator" >


    </LinearLayout>

    <Button
        android:id="@+id/background"
        android:layout_width="140dp"
        android:layout_height="41.6dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/background_kasir1"
        android:gravity="center"
        android:paddingTop="1.6dp"
        android:text="Kembali"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pesanan"
        app:backgroundTint="@null"/>

    <LinearLayout
        android:id="@+id/pesanan1"
        android:layout_width="400dp"
        android:layout_height="760dp"
        android:background="#FFFFFF"
        android:layout_marginStart="900dp"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_separator" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 Items"
            android:textSize="24sp"
            android:textColor="#844B16"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/manrope"/>

        <View
            android:id="@+id/rendang"
            android:layout_width="300dp"
            android:layout_height="95dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/indomierendangxml"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rendang"
            android:gravity="center"
            android:layout_marginStart="50dp"
            />
        <View
            android:id="@+id/rectangle_9"
            android:layout_width="21.29dp"
            android:layout_height="95dp"
            android:background="@drawable/indomie3"
            android:layout_marginTop="-96dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/goreng"
            app:layout_constraintBottom_toBottomOf="@+id/goreng" />
        <View
            android:id="@+id/rendang1"
            android:layout_width="300dp"
            android:layout_height="95dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/indomierendangxml"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rendang"
            android:gravity="center"
            android:layout_marginStart="50dp"
            />
        <View
            android:id="@+id/rectangle_10"
            android:layout_width="21.29dp"
            android:layout_height="95dp"
            android:background="@drawable/indomie3"
            android:layout_marginTop="-96dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/goreng"
            app:layout_constraintBottom_toBottomOf="@+id/goreng" />
        <View
            android:id="@+id/rendang2"
            android:layout_width="300dp"
            android:layout_height="95dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/indomierendangxml"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rendang"
            android:gravity="center"
            android:layout_marginStart="50dp"
            />
        <View
            android:id="@+id/rectangle_11"
            android:layout_width="21.29dp"
            android:layout_height="95dp"
            android:background="@drawable/indomie3"
            android:layout_marginTop="-96dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/goreng"
            app:layout_constraintBottom_toBottomOf="@+id/goreng" />

        <ImageView
            android:id="@+id/top_view_de"
            android:layout_width="37dp"
            android:layout_height="48dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="-300dp"
            android:background="@drawable/indomierendang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/mierendang1"
            android:layout_width="154dp"
            android:layout_height="26dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="-50dp"
            android:text="Indomie Rendang"
            android:textAppearance="@style/indomierendang"
            android:gravity="top"
            android:fontFamily="@font/manrope_bold"
            app:layout_constraintStart_toStartOf="@+id/rendang"
            app:layout_constraintTop_toTopOf="@+id/rendang"/>
        <TextView
            android:id="@+id/keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jangan pedas, garam sedikit"
            android:textAppearance="@style/ketmierendang"
            android:gravity="top"
            android:textSize="12sp"
            android:layout_marginTop="-2dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="120dp"
            />
        <TextView
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAppearance="@style/satu"
            android:lineSpacingExtra="7sp"
            android:translationY="-3.34sp"
            android:gravity="top"
            android:layout_marginTop="-25dp"
            android:layout_marginStart="306dp"
            />


            <View
                android:id="@+id/line_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/garis"

                android:layout_marginTop="300dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />


        <Button
            android:id="@+id/buttonprogres"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="In Progress"
            android:background="@drawable/inprogress"
            android:textAllCaps="false"
            android:fontFamily="@font/manrope"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#665353"
            app:backgroundTint="@null"
            android:layout_gravity="center" />


        <Button
            android:id="@+id/buttonselesai"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="Selesai"
            android:background="@drawable/buttonselesai"
            android:textAllCaps="false"
            android:fontFamily="@font/manrope"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#665353"
            app:backgroundTint="@null"
            android:layout_gravity="center" />
    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>

