<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:src="@drawable/logokedaitemeji"
            android:layout_marginEnd="8dp"
            android:contentDescription="Logo Kedai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kedai Temeji"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#333333" />
        <TextView
            android:id="@+id/search_text"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Search"
            android:layout_marginStart="60dp"
            android:paddingStart="15dp"
            android:paddingTop="8dp"

            android:paddingBottom="8dp"
            android:background="@drawable/search"
            android:drawableStart="@drawable/cari"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/add_product"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="Add Product"
            android:clipToOutline="true"
            android:textColor="@color/white"
            android:background="@drawable/add_product"
            android:paddingStart="15dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:textSize="14sp"
            android:drawableStart="@drawable/plus"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="500dp"
            />
    </LinearLayout>

    <!-- SIDEBAR -->
    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#F1F1F1"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <!-- Card Sidebar Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/menuspv"
            android:padding="12dp">

            <!-- Dashboard Active -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="#616161"
                    android:src="@drawable/dashboard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="Dashboard"
                    android:textColor="#616161"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <!-- Menu 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:background="#1A246BFD"
                android:paddingEnd="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/kelola"
                    android:tint="#2196F3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelola Menu"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:layout_marginStart="14dp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <!-- Menu 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="26dp"
                    android:src="@drawable/wifi"
                    android:tint="#616161"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelola Wifi"
                    android:textColor="#616161"
                    android:textSize="16sp"
                    android:layout_marginStart="14dp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="0dp"
        android:layout_height="680dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/sidebar"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/tabel_produ"
            android:layout_width="943dp"
            android:layout_height="600dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:clipToOutline="true"
            android:background="@drawable/tableabu1"
            />

    </LinearLayout>


    <!-- BUTTON KEMBALI -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="140dp"
        android:layout_height="41.6dp"
        android:text="Kembali"
        android:textColor="#FFFFFF"
        android:background="@drawable/background_kasir1"
        android:backgroundTint="#FF4B4B"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@id/sidebar"
        app:layout_constraintEnd_toEndOf="@id/sidebar"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        app:backgroundTint="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>