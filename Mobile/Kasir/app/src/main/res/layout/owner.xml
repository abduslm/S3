<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/sheet"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo_kedai_"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/LogoKedaiTemeji"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/kedai_temej"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="Kedai Temeji"
            android:textAppearance="@style/kedaitemejiteks"/>
    </LinearLayout>

    <!-- GAMBAR BACKGROUND -->
    <TextView
        android:id="@+id/background"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:background="@drawable/menuowner1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/sheet"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- TABLE -->
    <View
        android:id="@+id/table1"
        android:layout_width="520dp"
        android:layout_height="340dp"
        android:background="@drawable/tabelowner"
        android:layout_marginTop="60dp"
        android:layout_marginStart="190dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- SCROLL BAR KANAN -->
    <RelativeLayout
        android:id="@+id/scroll"
        android:layout_width="12dp"
        android:layout_height="343dp"
        android:background="@drawable/scroll"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="5dp" />
    <!-- Auto layout, grids, variables, and unit scale are not yet supported -->
    <RelativeLayout
        android:id="@+id/frame_8"
        android:layout_width="4dp"
        android:layout_height="50dp"
        android:background="@drawable/scroll1"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginStart="718dp" />
    <!-- Auto layout, grids, variables, and unit scale are not yet supported -->
    <RelativeLayout
        android:id="@+id/search_filt"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/searchowner"
        android:clipToOutline="true"
        android:layout_marginStart="203dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/role_filter"
        android:layout_width="122dp"
        android:layout_height="40dp"
        android:background="@drawable/roleowner"
        android:clipToOutline="true"
        android:layout_marginStart="390dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/date_filter"
        android:layout_width="123dp"
        android:layout_height="40dp"
        android:background="@drawable/dateowner"
        android:clipToOutline="true"
        android:layout_marginStart="520dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TableLayout
        android:id="@+id/user_table"
        android:layout_width="520dp"
    android:layout_marginTop="130dp"
    android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:stretchColumns="0,1,2,3,4,5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <!-- HEADER -->
        <TableRow
          android:background="#243447">

            <TextView
                android:text="Full Name"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <TextView
                android:text="Email"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <TextView
                android:text="Username"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <TextView
                android:text="Role"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="0"/>

            <TextView
                android:text="Joined"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <TextView
                android:text="Last Active"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="0"/>
        </TableRow>



    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
