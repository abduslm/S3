<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#2F3B52"
    android:padding="12dp">

    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:text="Full Name"
        android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold"/>

    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1.2" android:text="Email"
        android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold"/>

    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="0.9" android:text="Username"
        android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold"/>

    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="0.7" android:text="Role"
        android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold"/>

    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1.1" android:text="Joined Date"
        android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold"/>

    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:text="Last Active"
        android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold"/>
</LinearLayout>
