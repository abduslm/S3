<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_content_addproduct"
    android:background="#F1F1F1">

    <LinearLayout
        android:id="@+id/form_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Judul Halaman -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Produk"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FF6F00"
            android:layout_marginBottom="16dp"
            android:layout_gravity="start" />

        <!-- INPUT FORM PRODUK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- Baris 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="10dp">

                <!-- ID Product -->
                <LinearLayout
                    android:id="@+id/id_product_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Produk"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/et_id_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_etaddmenu"
                        android:padding="15dp"
                        android:hint="ID produk..."
                        android:textColor="#212121"
                        android:textColorHint="#9E9E9E" />
                </LinearLayout>

                <!-- Nama Product -->
                <LinearLayout
                    android:id="@+id/name_product_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Produk"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/et_name_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_etaddmenu"
                        android:padding="15dp"
                        android:hint="Nama produk..."
                        android:textColor="#212121"
                        android:textColorHint="#9E9E9E" />
                </LinearLayout>

                <!-- Quantity -->
                <LinearLayout
                    android:id="@+id/quantity_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stok"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/et_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:background="@drawable/bg_etaddmenu"
                        android:padding="15dp"
                        android:hint="Stok..."
                        android:textColor="#212121"
                        android:textColorHint="#9E9E9E" />
                </LinearLayout>
            </LinearLayout>

            <!-- Baris 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="10dp">

                <!-- Category Product -->
                <LinearLayout
                    android:id="@+id/category_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kategori"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/et_category_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_etaddmenu"
                        android:padding="15dp"
                        android:hint="Kategori produk..."
                        android:textColor="#212121"
                        android:textColorHint="#9E9E9E" />
                </LinearLayout>

                <!-- Price -->
                <LinearLayout
                    android:id="@+id/price_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/et_price_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:background="@drawable/bg_etaddmenu"
                        android:padding="15dp"
                        android:hint="Harga produk..."
                        android:textColor="#212121"
                        android:textColorHint="#9E9E9E" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Area Upload Box -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gambar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:id="@+id/upload_area"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_uploadgambar"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Image Preview -->
            <ImageView
                android:id="@+id/image_preview"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"/>

            <!-- Drag and Drop Text -->
            <TextView
                android:id="@+id/txt_drag_drop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drag and Drop"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textSize="20sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />

            <!-- Browse Files Text -->
            <TextView
                android:id="@+id/txt_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse Files"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#2196F3" />
        </LinearLayout>

        <!-- Tombol Aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="18dp">

            <Button
                android:id="@+id/btn_batal"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:text="Batal"
                android:background="@color/white"
                app:tint="@null"
                android:backgroundTint="@color/white"
                android:foregroundTint="@color/white"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_simpan"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="Simpan"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>