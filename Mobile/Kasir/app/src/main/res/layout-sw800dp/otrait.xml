<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/LogoKedaiTemeji"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kedai Temeji"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/search_box"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="Search"
            android:textColorHint="#A0A0A0"
            android:textColor="#333333"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/search"
            android:drawableStart="@drawable/cari"
            android:drawablePadding="8dp"
            android:singleLine="true"
            android:inputType="text"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>

    <!-- SIDEBAR -->
    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/menuspv"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/menu_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:drawableStart="@drawable/dashboard"
            android:drawablePadding="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/menu_kelola_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelola Menu"
            android:drawableStart="@drawable/kelola"
            android:drawablePadding="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/menu_kelola_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelola Wifi"
            android:drawableStart="@drawable/wifi"
            android:drawablePadding="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical"
            android:textColor="#007BFF"
            android:textSize="14sp"
            android:background="@drawable/bg_wifi"/>
    </LinearLayout>

    <!-- Tombol Kembali -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:text="Kembali"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF4B4B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/sidebar"
        android:layout_marginBottom="16dp"/>

    <!-- KONTEN UTAMA -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toEndOf="@id/sidebar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/main_container_rounded"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="@drawable/main_content_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:layout_marginEnd="20dp"
                android:paddingEnd="10dp"
                android:background="@android:color/transparent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List Wifi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp"/>

                <include layout="@layout/item_wifi_list" android:id="@+id/wifi_item_1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/form_floating_bg"
                android:padding="20dp"
                android:elevation="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Wifi"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:background="@drawable/input_field_border_brown"
                    android:paddingStart="12dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPassword"
                    android:background="@drawable/input_field_border_brown"
                    android:paddingStart="12dp"
                    android:layout_marginBottom="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/button_perbarui"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#2C3E50"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:text="Perbarui"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/button_tambah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tambah"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#4CAF50"
                        android:textSize="12sp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>