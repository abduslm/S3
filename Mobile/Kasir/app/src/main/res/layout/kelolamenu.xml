<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#E0E0E0"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/LogoKedaiTemeji"
            android:layout_marginEnd="8dp"
            android:contentDescription="Logo Kedai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kedai Temeji"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333" />
    </LinearLayout>

    <!-- SIDEBAR -->
    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#F1F1F1"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Container putih rounded -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/menuspv"
            android:padding="8dp">

            <!-- Menu 1: Dashboard -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dashboard"
                    android:tint="#616161"
                    android:contentDescription="Dashboard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Menu 2: Kelola Menu (aktif) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1A246BFD"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/kelola"
                    android:tint="#2196F3"
                    android:contentDescription="Kelola Menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelola Menu"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Menu 3: Kelola Wifi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="23dp"
                    android:src="@drawable/wifi"
                    android:tint="#616161"
                    android:contentDescription="Kelola Wifi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelola Wifi"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- ISI KONTEN -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/sidebar"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Judul Halaman -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD PRODUCT"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FF6F00"
                android:layout_marginBottom="16dp"
                android:layout_gravity="start" />

            <!-- INPUT FORM PRODUK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <!-- Baris 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">

                    <!-- ID Product -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID Product"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/et_id_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittextkm"
                            android:padding="15dp"
                            android:hint="ID produk..."
                            android:textColor="#212121"
                            android:textColorHint="#9E9E9E" />
                    </LinearLayout>

                    <!-- Nama Product -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Product"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/et_name_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittextkm"
                            android:padding="15dp"
                            android:hint="Nama produk..."
                            android:textColor="#212121"
                            android:textColorHint="#9E9E9E" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Baris 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">

                    <!-- Category Product -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category Product"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/et_category_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittextkm"
                            android:padding="15dp"
                            android:hint="Kategori produk..."
                            android:textColor="#212121"
                            android:textColorHint="#9E9E9E" />
                    </LinearLayout>

                    <!-- Price -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/et_price_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:background="@drawable/edittextkm"
                            android:padding="15dp"
                            android:hint="Harga produk..."
                            android:textColor="#212121"
                            android:textColorHint="#9E9E9E" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Area Upload Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/upload_boxkm"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/iconkm"
                    android:tint="#2196F3"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drag and Drop"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse Files"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#2196F3" />
            </LinearLayout>

            <!-- Tombol Simpan -->
            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

    <!-- BUTTON KEMBALI (hanya 1, fix) -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="110dp"
        android:layout_height="49dp"
        android:text="Kembali"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF4B4B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/sidebar"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="18dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
