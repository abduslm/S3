<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:src="@drawable/logokedaitemeji"
            android:layout_marginEnd="8dp"
            android:contentDescription="Logo Kedai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kedai Temeji"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#333333" />
    </LinearLayout>

    <!-- SIDEBAR -->
    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#F1F1F1"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <!-- Card Sidebar Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/menuspv"
            android:padding="12dp">

            <!-- Dashboard Active -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="#616161"
                    android:src="@drawable/dashboard_owner" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="Dashboard"
                    android:textColor="#616161"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <!-- Menu 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:background="#1A246BFD"
                android:paddingEnd="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/kelola"
                    android:tint="#2196F3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelola Menu"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:layout_marginStart="14dp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <!-- Menu 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="26dp"
                    android:src="@drawable/wifi"
                    android:tint="#616161"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelola Wifi"
                    android:textColor="#616161"
                    android:textSize="16sp"
                    android:layout_marginStart="14dp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="0dp"
            android:layout_height="680dp"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/sidebar"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <!-- Judul Halaman -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD PRODUCT"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FF6F00"
                android:layout_marginBottom="16dp"
                android:layout_gravity="start" />

            <!-- INPUT FORM PRODUK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <!-- Baris 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">

                    <!-- ID Product -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID Product"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/et_id_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittextkm"
                            android:padding="15dp"
                            android:hint="ID produk..."
                            android:textColor="#212121"
                            android:textColorHint="#9E9E9E" />
                    </LinearLayout>

                    <!-- Nama Product -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Product"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/et_name_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittextkm"
                            android:padding="15dp"
                            android:hint="Nama produk..."
                            android:textColor="#212121"
                            android:textColorHint="#9E9E9E" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Baris 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">

                    <!-- Category Product -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category Product"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/et_category_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittextkm"
                            android:padding="15dp"
                            android:hint="Kategori produk..."
                            android:textColor="#212121"
                            android:textColorHint="#9E9E9E" />
                    </LinearLayout>

                    <!-- Price -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/et_price_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:background="@drawable/edittextkm"
                            android:padding="15dp"
                            android:hint="Harga produk..."
                            android:textColor="#212121"
                            android:textColorHint="#9E9E9E" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Area Upload Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/upload_boxkm"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/iconkm"
                    android:tint="#2196F3"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drag and Drop"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:textSize="20sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse Files"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#2196F3" />
            </LinearLayout>

        </LinearLayout>

    <!-- BUTTON KEMBALI -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="Kembali"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF4B4B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/sidebar"
        app:layout_constraintEnd_toEndOf="@id/sidebar"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
