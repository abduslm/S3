<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/wifi_item_border"
    android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/icon_wifi"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_wifi"  app:tint="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi 1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/icon_wifi"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/wifi_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="13sp"
        android:textColor="#777777"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/icon_wifi"
        app:layout_constraintTop_toBottomOf="@id/wifi_name"/>

    <TextView
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="15sp"
        android:textColor="#FF0000"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="4dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>