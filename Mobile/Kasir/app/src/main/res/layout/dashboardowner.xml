<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#E0E0E0"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="58dp"
            android:src="@drawable/LogoKedaiTemeji"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kedai Temeji"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"/>
    </LinearLayout>

    <!-- SIDEBAR -->
    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#F1F1F1"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Container Putih Rounded -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/menuspv"
            android:padding="8dp">

            <!-- Menu 1: Dashboard -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1A246BFD"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dashboard"
                    android:tint="#2196F3"
                    android:contentDescription="Dashboard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Menu 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vectorowner"
                    android:tint="#616161"
                    android:contentDescription="Kelola Menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat User"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Menu 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="23dp"
                    android:contentDescription="Lihat Menu"
                    android:src="@drawable/ownermenu"
                    android:tint="#616161" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Menu"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintStart_toEndOf="@id/sidebar"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Overload dan Tanggal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:text="Overload"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <!-- Overload dan Tanggal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">


                <LinearLayout
                    android:id="@+id/date_picker_container"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tv_selected_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 Oktober 2025"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginEnd="4dp" />

                    <!-- Panah bawah -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:contentDescription="Pilih Tanggal"
                        android:src="@drawable/Vector"
                        android:tint="#333333" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Kotak-kotak biru -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-65dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/lebelspv"/>


            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/lebelspv"/>

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/lebelspv"/>

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/lebelspv"/>
        </LinearLayout>

        <!-- Chart -->
        <View
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/label1"
            android:layout_marginBottom="24dp" />
    </LinearLayout>

    <!-- BUTTON KEMBALI -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:text="Kembali"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF4B4B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/sidebar"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="18dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
