<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#F8FBFF">

    <TextView android:id="@+id/tv_fullname"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:textSize="13sp" android:textColor="#212121"/>

    <TextView android:id="@+id/tv_email"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1.2" android:textSize="13sp" android:textColor="#212121"/>

    <TextView android:id="@+id/tv_username"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="0.9" android:textSize="13sp" android:textColor="#212121"/>

    <TextView android:id="@+id/tv_role"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="0.7" android:textSize="13sp" android:textColor="#212121"/>

    <TextView android:id="@+id/tv_joined"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1.1" android:textSize="13sp" android:textColor="#212121"/>

    <TextView android:id="@+id/tv_lastactive"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:textSize="13sp" android:textColor="#212121"/>
</LinearLayout>
