<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_kelolamenu"
    android:background="#F5F5F5">

    <!-- Container untuk tabel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:id="@+id/scrolview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <TableLayout
                android:id="@+id/tabelmenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:stretchColumns="0,6">


                <!-- ===== Header Tabel ===== -->
                <TableRow
                    android:layout_width="wrap_content"
                    android:background="#F8F8F8">

                    <TextView
                        android:padding="4dp"
                        android:text="Nama Menu"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#808080"
                        android:background="@drawable/headertabel"/>

                    <TextView
                        android:padding="4dp"
                        android:text="Kategori"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#808080"
                        android:background="@drawable/headertabel"/>

                    <TextView
                        android:padding="4dp"
                        android:text="Status"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#808080"
                        android:background="@drawable/headertabel"/>

                    <TextView
                        android:padding="4dp"
                        android:text="ID Menu"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#808080"
                        android:background="@drawable/headertabel"/>

                    <TextView
                        android:padding="4dp"
                        android:gravity="center"
                        android:text="Stok"
                        android:textStyle="bold"
                        android:textColor="#808080"
                        android:background="@drawable/headertabel"/>

                    <TextView
                        android:padding="4dp"
                        android:gravity="center"
                        android:text="Harga"
                        android:textStyle="bold"
                        android:textColor="#808080"
                        android:background="@drawable/headertabel"/>

                    <TextView
                        android:padding="4dp"
                        android:gravity="center"
                        android:text="Aksi"
                        android:textStyle="bold"
                        android:textColor="#808080"
                        android:background="@drawable/headertabel"/>
                </TableRow>


            </TableLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Empty State (jika tidak ada data) -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum ada data menu"
            android:textSize="16sp"
            android:textColor="#616161"/>

        <Button
            android:id="@+id/btn_tambah_pertama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="+ Tambah Menu Pertama"
            android:backgroundTint="#FF6F00"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>