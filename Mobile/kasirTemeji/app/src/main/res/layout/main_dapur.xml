<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">
    <!-- tools:context=".YourActivity"  -->


    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="32dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo_kedai_temeji"
                android:layout_width="48dp"
                android:layout_height="58dp"
                android:contentDescription="Logo Kedai Temeji"
                android:scaleType="fitCenter"
                android:src="@drawable/logokedaitemeji" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/oneway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/harmattan_regular"
                    android:gravity="start"
                    android:text="Kedai Temeji"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/jum_at_19_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Jum'at 19-September-2025 / Mahesa"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/search_card"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="260dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="0dp"

                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_cari"
                android:drawablePadding="8dp"
                android:hint="Search"
                android:inputType="text"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ordermenu4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="8dp"
                android:layout_marginStart="120dp"
                android:background="#844B16"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_pesanan"
                android:contentDescription="Order Menu Icon"
                />
            <!-- android:background="@drawable/ordermenu2" -->

            <TextView
                android:id="@+id/ordermenu5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/manrope_bold"
                android:text="Pesanan 1"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/header_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_bar" />

    <!-- GANTI LinearLayout dengan RecyclerView untuk daftar pesanan kiri -->
    <LinearLayout
        android:id="@+id/container_pesanan_kiri"
        android:layout_width="800dp"
        android:layout_height="550dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-100dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_separator">


        <!-- RecyclerView untuk daftar pesanan -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_daftar_pesanan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/background"
        android:layout_width="140dp"
        android:layout_height="41.6dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"

        android:gravity="center"
        android:paddingTop="1.6dp"
        android:text="Kembali"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_pesanan_kiri"
        app:backgroundTint="@null"/>
    <!-- android:background="@drawable/background_kasir1" -->

    <!-- LinearLayout utama untuk bagian kanan -->
    <LinearLayout
        android:id="@+id/pesanan1"
        android:layout_width="400dp"
        android:layout_height="760dp"
        android:background="#FFFFFF"
        android:layout_marginStart="900dp"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_separator" >

        <!-- TextView "4 Items" tetap di atas -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 Items"
            android:textSize="24sp"
            android:textColor="#844B16"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/manrope"/>

        <!-- Container untuk RecyclerView dengan batasan height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- RecyclerView untuk menampilkan item pesanan -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_detail_pesanan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <!-- Container untuk tombol-tombol (TIDAK ikut scroll) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp">

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                android:background="#CCCCCC" />

            <!-- Tombol In Progress -->
            <Button
                android:id="@+id/buttonprogres"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:text="In Progress"
                android:textAllCaps="false"
                android:fontFamily="@font/manrope"
                android:layout_marginTop="10dp"
                android:background="@drawable/inprogres"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#665353"
                app:backgroundTint="@null"
                android:layout_gravity="center" />

            <!-- Tombol Selesai -->
            <Button
                android:id="@+id/buttonselesai"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:text="Selesai"
                android:textAllCaps="false"
                android:fontFamily="@font/manrope"
                android:background="@drawable/bt_selesai"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#665353"
                app:backgroundTint="@null"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>