<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:id="@+id/main_layout">

    <!-- HEADER BAR -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="91dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo & Title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo_kedai_temeji"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:contentDescription="Logo Kedai Temeji"
                android:scaleType="fitCenter"
                android:src="@drawable/logokedaitemeji" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/harmattan_regular"
                    android:text="Kedai Temeji"
                    android:textColor="#000000"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="-8dp" />

                <TextView
                    android:id="@+id/tv_date_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jum'at 19-September-2025 / Kasir"
                    android:textColor="#666666"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/search_card"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_cari"
                android:drawablePadding="8dp"
                android:hint="Cari menu..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <!-- Order Menu Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_daftar_pesanan"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/bg_tombol_oranye"
            android:drawableStart="@drawable/edit_square_20px_white"
            android:drawablePadding="8dp"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="16dp"
            android:text="Daftar Pesanan"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- HEADER SEPARATOR -->
    <View
        android:id="@+id/header_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_bar" />

    <!-- SIDEBAR KATEGORI -->
    <androidx.cardview.widget.CardView
        android:id="@+id/sidebar_card"
        android:layout_width="168dp"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_separator">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp">

                <!-- Title Kategori -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="Kategori"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- List Kategori -->
                <TextView
                    android:id="@+id/tv_all_menu"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:text="Semua Menu"
                    android:textColor="#844B16"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null" />

                <TextView
                    android:id="@+id/tv_makanan"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:text="Makanan"
                    android:textColor="#844B16"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null" />

                <TextView
                    android:id="@+id/tv_minuman"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:text="Minuman"
                    android:textColor="#844B16"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null" />

                <TextView
                    android:id="@+id/tv_signature"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:text="Signature"
                    android:textColor="#844B16"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null" />

                <TextView
                    android:id="@+id/tv_lainnya"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:text="Lainnya"
                    android:textColor="#844B16"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:stateListAnimator="@null" />

                <!-- Spacer -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Back Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_kembali"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/bg_tombol_kembali"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="center"
                    android:text="Kembali"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

            </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- MAIN CONTENT AREA -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F1F1F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sidebar_card"
        app:layout_constraintTop_toBottomOf="@+id/header_separator">

        <!-- Menu List Area -->
        <LinearLayout
            android:id="@+id/ll_menu_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/v_separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Title Menu List -->
            <TextView
                android:id="@+id/tv_menu_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Daftar Menu"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#FFFFFF" />

            <!-- RecyclerView for Menu -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:padding="8dp"
                android:scrollbars="vertical" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/pb_loading_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Empty State -->
            <TextView
                android:id="@+id/tv_empty_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="32dp"
                android:text="Tidak ada menu ditemukan"
                android:textColor="#666666"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Vertical Separator -->
        <View
            android:id="@+id/v_separator"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#CCCCCC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ll_cart_area"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Cart Area -->
        <LinearLayout
            android:id="@+id/ll_cart_area"
            android:layout_width="430dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Cart Title -->
            <TextView
                android:id="@+id/tv_cart_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Pesanan Anda"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#FFFFFF" />

            <!-- Cart Item List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cart_items"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:padding="8dp"
                android:scrollbars="vertical" />

            <!-- Empty Cart -->
            <TextView
                android:id="@+id/tv_empty_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="32dp"
                android:text="Belum ada pesanan"
                android:textColor="#666666"
                android:textSize="14sp"
                android:visibility="gone" />

            <!-- Cart Summary -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:id="@+id/ll_summary_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <View
                    android:id="@+id/line_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"
                    android:background="#E0E0E0" />

                <!-- Subtotal Row -->
                <LinearLayout
                    android:id="@+id/ll_subtotal_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_subtotal_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_subtotal_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 0"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- PPN Row -->
                <!-- Tambahkan di summary section, sebelum payment method -->
                <LinearLayout
                    android:id="@+id/ll_ppn_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cb_ppn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="PPN 12%" />

                    <TextView
                        android:id="@+id/tv_ppn_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rp. 0"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:gravity="end" />
                </LinearLayout>
                <!-- Cash Received Row -->
                <LinearLayout
                    android:id="@+id/ll_cash_received_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_cash_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Uang"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/et_cash_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Masukkan jumlah"
                        android:inputType="number"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:maxLines="1" />
                </LinearLayout>

                <!-- Change Row -->
                <LinearLayout
                    android:id="@+id/ll_change_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_change_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kembalian"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_change_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 0"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Payment Method Section -->
                <LinearLayout
                    android:id="@+id/ll_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_payment_method_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Metode"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <!-- Payment Method Container -->
                    <LinearLayout
                        android:id="@+id/ll_payment_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_metode_container"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <!-- Cash Button -->
                        <TextView
                            android:id="@+id/btn_cash"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_metode_active"
                            android:gravity="center"
                            android:text="Cash"
                            android:fontFamily="@font/manrope_bold"
                            android:textColor="#000000"
                            android:clickable="true"
                            android:focusable="true" />

                        <!-- QRIS Button -->
                        <TextView
                            android:id="@+id/btn_qris"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="QRIS"
                            android:fontFamily="@font/manrope_bold"
                            android:textColor="#000000"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Order Button Container -->
                <LinearLayout
                    android:id="@+id/ll_order_button_container"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_order_brown"
                    android:orientation="horizontal"
                    android:paddingHorizontal="24dp"
                    android:gravity="center_vertical">

                    <!-- Order Info -->
                    <LinearLayout
                        android:id="@+id/ll_order_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_item_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 items"
                            android:textColor="#A1887F"
                            android:textSize="12sp"
                            android:fontFamily="@font/manrope_regular" />

                        <TextView
                            android:id="@+id/tv_order_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 0"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:fontFamily="@font/manrope_bold" />
                    </LinearLayout>

                    <!-- Order Button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_order_now"
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:background="@drawable/bg_order_green_button"
                        android:text="Order"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/manrope_bold" />
                </LinearLayout>

            </LinearLayout>
            </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- NOTE DIALOG FRAGMENT CONTAINER -->
    <FrameLayout
        android:id="@+id/fl_note_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>