<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Bagian kiri: Icon dan waktu -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Waktu pesanan -->
            <TextView
                android:id="@+id/text_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23.00"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/manrope_bold" />

            <!-- Icon di bawah waktu -->
            <ImageView
                android:id="@+id/icon_pesanan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/pesanan10"
                android:contentDescription="Icon Pesanan" />

        </LinearLayout>

        <!-- Bagian kanan: Detail pesanan -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- Baris pertama: Nama pesanan dan Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Nama pesanan -->
                <TextView
                    android:id="@+id/text_nama_pesanan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pesanan 1 - Mahesa"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/manrope_bold" />

                <!-- Status (di kanan) -->
                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menunggu"
                    android:textSize="12sp"
                    android:textColor="#FF9800"
                    android:textStyle="bold"
                    android:fontFamily="@font/manrope"
                    android:layout_marginTop="4dp"
                    />

            </LinearLayout>

            <!-- Daftar item -->
            <TextView
                android:id="@+id/text_daftar_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Indomie Rendang 1 + Indomie Goreng 1 + Es Teh 2"
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/manrope" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>