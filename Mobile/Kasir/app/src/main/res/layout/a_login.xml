<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image1"
    tools:context=".MainActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3202020"/>
    <!-- Icon Logout (kanan atas) -->
    <ImageView
        android:id="@+id/icon_logout"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/logout"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <FrameLayout
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="0dp">


        <ImageView
            android:layout_width="172dp"
            android:layout_height="172dp"
            android:contentDescription="LOGIN"
            android:padding="8dp"
            android:radius="60dp"
            android:src="@drawable/logokedaitemeji" />


    </FrameLayout>

    <LinearLayout
        android:id="@+id/login_container"
        android:layout_width="610dp"
        android:layout_height="526dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingBottom="25dp"
        android:gravity="center_horizontal"
        android:background="@drawable/login"
        app:layout_constraintTop_toBottomOf="@id/login_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_width="610dp">

        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textSize="52sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:layout_width="518dp"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:layout_marginBottom="10dp"
            android:focusable="@font/inter"/>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="518.1dp"
            android:layout_height="56.16dp"
            android:background="@drawable/username"
            android:hint="Username..."
            android:textSize="18sp"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#D9D9D9"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="18dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="518dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="518.1dp"
            android:layout_height="56.16dp"
            android:background="@drawable/password"
            android:hint="Password..."
            android:textSize="18sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="60dp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="518.1dp"
            android:layout_height="70dp"
            android:text="@string/signin_button"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:background="@drawable/sigin_bg"
            android:textStyle="bold"
            android:elevation="4dp"
            android:fontFamily="@font/inter"
            app:backgroundTint="@null"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>