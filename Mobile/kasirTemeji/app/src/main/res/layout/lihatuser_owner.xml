<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <!-- ================= HEADER ================= -->


    <!-- ================= MAIN CONTENT ================= -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- TABLE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_table_user"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TableLayout
                    android:id="@+id/table_layout_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <!-- Header -->
                    <TableRow android:background="#243447" android:gravity="center">
                        <TextView android:text="Nama" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="Username" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="Level" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="Email" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="No. HP" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="Status" android:textColor="#fff" android:padding="12dp"/>
                    </TableRow>


                </TableLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
