<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#E0E0E0"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/LogoKedaiTemeji"
            android:layout_marginEnd="8dp"
            android:contentDescription="Logo Kedai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kedai Temeji"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121" />
    </LinearLayout>

    <!-- SIDEBAR -->
    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#F1F1F1"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Container putih rounded -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/menuspv"
            android:padding="8dp">

            <!-- Menu 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dashboard"
                    android:tint="#616161"
                    android:contentDescription="Dashboard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Menu 2: aktif -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1A246BFD"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vectorowner"
                    android:tint="#2196F3"
                    android:contentDescription="Lihat User" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat User"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Menu 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ownermenu"
                    android:tint="#616161"
                    android:contentDescription="Lihat Menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Menu"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- ISI KONTEN -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/sidebar"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Pencarian dan Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:weightSum="3">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Search"
                    android:paddingStart="16dp"
                    android:textColor="#212121"
                    android:textColorHint="#757575"
                    android:background="@drawable/edittextowner" />

                <EditText
                    android:id="@+id/et_role"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Role"
                    android:paddingStart="16dp"
                    android:textColor="#212121"
                    android:textColorHint="#757575"
                    android:background="@drawable/edittextowner" />

                <Spinner
                    android:id="@+id/spinner_date"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="0.8"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/edittextowner"
                    android:contentDescription="Filter berdasarkan tanggal" />
            </LinearLayout>

            <!-- BAGIAN TABEL USER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="8dp"
                android:elevation="2dp">

                <!-- HEADER KOLOM -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2F3B52"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal"
                    android:elevation="3dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Full Name"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="Email"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="Username"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Role"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="Joined Date"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Last Active"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- ISI TABEL (BARIS DATA USER) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Baris 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F8FBFF"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="10dp"
                        android:orientation="horizontal">

                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="John Smith" android:textSize="13sp" android:textColor="#212121"/>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.2" android:text="john.smith@gmail.com" android:textSize="13sp" android:textColor="#212121"/>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.9" android:text="jonny77" android:textSize="13sp" android:textColor="#212121"/>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.7" android:text="Admin" android:textSize="13sp" android:textColor="#212121"/>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.1" android:text="March 12, 2023" android:textSize="13sp" android:textColor="#212121"/>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="1 minute ago" android:textSize="13sp" android:textColor="#212121"/>
                    </LinearLayout>

                    <!-- Baris 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="10dp"
                        android:orientation="horizontal">

                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Olivia Bennett" android:textSize="13sp" android:textColor="#212121"/>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.2" android:text="ollyben@gmail.com" android:textSize="13sp" android:textColor="#212121"/>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.9" android:text="olly659" android:textSize="13sp" android:textColor="#212121"/>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.7" android:text="User" android:textSize="13sp" android:textColor="#212121"/>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.1" android:text="June 27, 2022" android:textSize="13sp" android:textColor="#212121"/>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="1 month ago" android:textSize="13sp" android:textColor="#212121"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- BUTTON KEMBALI -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:text="Kembali"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/sidebar"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="18dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
