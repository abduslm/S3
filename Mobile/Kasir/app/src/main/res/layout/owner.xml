<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <!-- ================= HEADER ================= -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/LogoKedaiTemeji"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:text="Kedai Temeji"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <!-- SIDEBAR (Final Sesuai Gambar) -->
    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#F1F1F1"
        android:padding="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Card Sidebar Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/menuspv"
            android:padding="12dp">

            <!-- Dashboard Active -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/dashboard_owner" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="Dashboard"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <!-- Menu 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/vectorowner"
                    android:tint="#616161"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat User"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginStart="14dp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <!-- Menu 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#1A246BFD"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ownermenu"
                    android:tint="#2196F3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Menu"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:layout_marginStart="14dp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <!-- ================= MAIN CONTENT ================= -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/sidebar"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- SEARCH FILTER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Search -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/filter_bg"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/cari"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Search"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingStart="10dp"/>
            </LinearLayout>

            <!-- Role -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginStart="12dp"
                android:layout_weight="0.8"
                android:background="@drawable/filter_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginStart="12dp"
                android:layout_weight="0.8"
                android:background="@drawable/filter_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- TABLE -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow android:background="#243447">
                        <TextView android:text="Full Name" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="Email" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="Username" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="Role" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="Joined Date" android:textColor="#fff" android:padding="12dp"/>
                        <TextView android:text="Last Active" android:textColor="#fff" android:padding="12dp"/>
                    </TableRow>

                </TableLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    <!-- BUTTON KEMBALI -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:text="Kembali"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF4B4B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/sidebar"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="22dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
